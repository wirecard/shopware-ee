{
  "name": "wirecard/shopware-ee",
  "description": "Shopware plugin for Wirecard Payment Processing Gateway",
  "license": "GPL-3.0-only",
  "minimum-stability": "beta",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6",
    "wirecard/payment-sdk-php": "2.3.2",
    "php-http/guzzle5-adapter": ">=1.0.1",
    "guzzlehttp/psr7": ">=1.4.2"
  },
  "require-dev": {
    "phpunit/phpunit": "5.4.3",
    "squizlabs/php_codesniffer": "^2.7"
  },
  "type": "shopware-plugin",
  "scripts": {
    "upload-coverage": "coveralls -v",
    "cs-check": "phpcs --standard=phpcs.xml --ignore=*/vendor/*,*/Tests/*,*/node_modules/*,*/Resources/* -s",
    "cs-fix": "phpcbf --standard=phpcs.xml",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
